<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/include3"
        layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/static_title"
        android:layout_width="188dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="48dp"
        android:text="@string/static_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include3" />

    <TextView
        android:id="@+id/static_title2"
        android:layout_width="188dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:text="@string/static_item_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/static_title" />

    <TextView
        android:id="@+id/static_title3"
        android:layout_width="188dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:text="@string/static_locale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/static_title2" />

    <TextView
        android:id="@+id/static_title4"
        android:layout_width="188dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:text="@string/static_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/static_title3" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="188dp"
        android:layout_height="32dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/static_title"
        app:layout_constraintTop_toBottomOf="@+id/include3"
        android:inputType="text" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/appCompatSpinner2"
        android:layout_width="188dp"
        android:layout_height="32dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="32dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toEndOf="@+id/static_title2"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/appCompatSpinner"
        android:layout_width="188dp"
        android:layout_height="32dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="32dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toEndOf="@+id/static_title3"
        app:layout_constraintTop_toBottomOf="@+id/appCompatSpinner2" />

    <DatePicker
        android:layout_width="188dp"
        android:layout_height="32dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/static_title4"
        app:layout_constraintTop_toBottomOf="@+id/appCompatSpinner" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="332dp"
        android:text="@string/button_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include3"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>